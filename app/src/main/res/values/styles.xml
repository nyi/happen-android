<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="HappenTheme" parent="android:Theme.Holo.Light">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/CustomActionBarTabText</item>
        <item name="android:actionMenuTextColor">#ffffff</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Happentheme</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_back_holo_dark</item>

    </style>

    <style name="CustomActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#3a3b49</item>
        <item name="android:backgroundStacked">#f8f8f8</item>
        <item name="android:titleTextStyle">@style/CustomActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="CustomActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>

    <!-- ActionBar tabs text styles -->
    <style name="CustomActionBarTabText" parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/custom_action_bar_tab_text_color</item>
    </style>

    <style name="ActionBarTabStyle.Happentheme" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_happentheme</item>
    </style>


    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>
    <style name="EventFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

</resources>
